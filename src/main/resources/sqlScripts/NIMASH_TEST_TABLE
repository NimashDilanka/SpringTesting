CREATE TABLE NIMASH_TEST_TABLE
(
  P_KEY VARCHAR2(20) NOT NULL
, NUM_COL NUMBER DEFAULT 0
, STR_COL VARCHAR2(20)
, CONSTRAINT NIMASH_TEST_TABLE_PK PRIMARY KEY
  (
    P_KEY
  )
  ENABLE
);

COMMENT ON COLUMN NIMASH_TEST_TABLE.P_KEY IS 'primary key';

COMMENT ON COLUMN NIMASH_TEST_TABLE.NUM_COL IS 'number column';

COMMENT ON COLUMN NIMASH_TEST_TABLE.STR_COL IS 'string column';